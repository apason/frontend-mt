<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    // Fragment responsible for operating the camera
    <fragment android:name="helsinki.cs.mobiilitiedekerho.mobiilitiedekerho.CameraFragment"
        android:id="@+id/camera_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        tools:layout="@layout/camera_fragment" />

    // Fragment responsible for playing the answer videos
    <fragment android:name="helsinki.cs.mobiilitiedekerho.mobiilitiedekerho.AnswerVideoFragment"
        android:id="@+id/answer_video_fragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout="@layout/answer_video_fragment" />

    // Fragment responsible for login button
    <fragment android:name="helsinki.cs.mobiilitiedekerho.mobiilitiedekerho.LoginFragment"
        android:id="@+id/login_fragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout="@layout/answer_video_fragment" />

</RelativeLayout>
