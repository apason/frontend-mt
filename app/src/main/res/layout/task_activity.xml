<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    // Fragment responsible for playing the task video
    <FrameLayout
        android:id="@+id/task_video_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_alignParentEnd="false" android:layout_below="@+id/login_button_fragment"/>

    // Fragment responsible for operating the camera
    <FrameLayout
        android:id="@+id/camera_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" android:layout_below="@+id/task_video_fragment"
        android:layout_marginTop="10dp"/>

    // Fragment responsible for playing the answer videos
    <FrameLayout
        android:id="@+id/answer_video_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    // Fragment responsible for login
    <FrameLayout
        android:id="@+id/login_button_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    // Fragment responsible for login
    <FrameLayout
        android:id="@+id/video_view_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
