<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="#ffffff"
              android:visibility="visible" android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tässä näkymässä voit lisätä uuden Tiedekerholaisen"
        android:id="@+id/infotext" android:textColor="#000000" android:textSize="17dp"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiedekerholaisen käyttäjänimi:"
        android:id="@+id/nickname" android:textColor="#000000" android:textSize="17dp"
        android:layout_margin="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nickname_field" android:layout_gravity="right"
        android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
        android:textColor="#000000" android:background="#d9d9d9" android:textSize="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiedekerholaisen käyttäjäkuva:"
        android:id="@+id/thumbnailtext" android:textColor="#000000" android:textSize="17dp"
        android:layout_margin="5dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ota kuva"
        android:id="@+id/thumbnailbutton" android:layout_margin="5dp"
        android:layout_gravity="right"/>
    <ImageView
        android:layout_width="101dp"
        android:layout_height="93dp"
        android:id="@+id/thumbnailpreview" android:layout_margin="5dp"
        android:layout_gravity="center_horizontal" android:maxHeight="93dp"
        android:maxWidth="101dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tallenna"
        android:id="@+id/savesubuserbutton" android:layout_gravity="right"
        android:layout_margin="5dp"
        android:layout_marginTop="50dp"/>
</LinearLayout>